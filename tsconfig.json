{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts"
  ]
}